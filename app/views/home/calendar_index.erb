<div class="container">
  <div class="sidebar_l">
    <div class="sidebar__item">
      <ul class="sidenav">
        <li><%= link_to '動画',posts_path %>
          <ul>
            <li><a href="筋トレ">筋トレ</a></li>
            <li><a href="ダイエット">ダイエット</a></li>
          </ul>
       </li>
        <li><%= link_to '器具','top' %>
