<h1>登録画面</h1>

<table>
  <thead>
    <tr>
      <th>ユーザーID</th>
      <th>体重</th>
      <th>身長</th>
      <th>運動種類</th>
      <th>運動時間</th>
      <th>カロリー</th>
      <th>運動種類</th>
      <th>運動時間</th>
      <th>カロリー</th>
      <th>運動種類</th>
      <th>運動時間</th>
      <th>カロリー</th>
      <th>朝食</th>
      <th>昼食</th>
      <th>晩食</th>
      <th>間食</th>
      <th>間食メモ</th>
      <th>体調</th>
      <th>日付</th>
      <th>メモ</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @entries.each do |entry| %>
      <tr>
        <td><%= entry.user_id %></td>
        <td><%= entry.weight %></td>
        <td><%= entry.height %></td>
        <td><%= entry.ex_type_1 %></td>
        <td><%= entry.ex_time_1 %></td>
        <td><%= entry.ex_amount_1 %></td>
        <td><%= entry.ex_type_2 %></td>
        <td><%= entry.ex_time_2 %></td>
        <td><%= entry.ex_amount_2 %></td>
        <td><%= entry.ex_type_3 %></td>
        <td><%= entry.ex_time_3 %></td>
        <td><%= entry.ex_amount_3 %></td>
        <td><%= entry.meal_asa %></td>
        <td><%= entry.meal_hiru %></td>
        <td><%= entry.meal_ban %></td>
        <td><%= entry.snack %></td>
        <td><%= entry.snack_memo %></td>
        <td><%= entry.condition %></td>
        <td><%= entry.day %></td>
        <td><%= entry.memo %></td>
        <td><%= link_to '詳細', entry %></td>
        <td><%= link_to '変更', edit_entry_path(entry) %></td>
        <td><%= link_to '削除', entry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

