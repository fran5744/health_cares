<p id="notice"><%= notice %></p>

<h1>食べ物</h1>

<table>
  <thead>
    <tr>
      <th>食材名</th>
      <th>画像</th>
      <th>説明</th>
      <th>食べ物種類</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @foods.each do |food| %>
      <tr>
        <td><%= food.f_name %></td>
        <td><%= food.f_filename %>
            <% if food.f_filename.present? %>
              <br>
              <%= image_tag food.f_filename, size: '200x200'%>
            <% end %>
        </td>
        <td><%= food.legend %></td>
        <td>
        <% if (food.f_type == "1") %>
            筋トレ動画
          <% else %>
            ダイエット動画
          <% end %>
        </td>
        <td><%= link_to '詳細', food %></td>
        <td><%= link_to '変更', edit_food_path(food) %></td>
        <td><%= link_to '削除', food, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

