<p id="notice"><%= notice %></p>

<h1>食べ物</h1>

<table>
    <% @foods.each do |food| %>
      <tr>
        <th>食材名</th>
          <td><%= food.f_name %></td>
      </tr>
      <tr>
        <th>画像</th>
          <td><%= food.f_filename %>
            <% if food.f_filename.present? %>
              <br>
              <%= image_tag food.f_filename, size: '200x200'%>
            <% end %>
          </td>
      </tr>
      <tr>
        <th>説明</th>
          <td><%= food.legend %></td>
      </tr>
      <tr>
        <th>画像</th>
          <td>
          <% if (food.f_type == "1") %>
              筋トレ動画
            <% else %>
              ダイエット動画
            <% end %>
          </td>
      </tr>
        <td><%= link_to '詳細', food %></td>
        <td><%= link_to '変更', edit_food_path(food) %></td>
        <td><%= link_to '削除', food, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
</table>

<br>

