<div class="simple-calendar">
  <div class="calendar-heading">
    <%= link_to t('simple_calendar.previous', default: 'Previous'), calendar.url_for_previous_view %>
    <span class="calendar-title"><%= t('date.month_names')[start_date.month] %> <%= start_date.year %></span>
    <%= link_to t('simple_calendar.next', default: 'Next'), calendar.url_for_next_view %>
  </div>

  <table class="table table-striped">
    <thead>
      <tr>
        <% date_range.slice(0, 7).each do |day| %>
          <th><%= t('date.abbr_day_names')[day.wday] %></th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% date_range.each_slice(7) do |week| %>
        <tr>
          <% week.each do |day| %>
            <%= content_tag :td, class: calendar.td_classes_for(day) do %>
              <% if defined?(Haml) && respond_to?(:block_is_haml?) && block_is_haml?(passed_block) %>
                <% capture_haml(day, sorted_events.fetch(day, []), &passed_block) %>
              <% else %>
                <% passed_block.call day, sorted_events.fetch(day, []) %>
                <br>
                <a href="//www.yahoo.co.jp">yahoo</a>
              <% end %>
            <% end %>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
  <p>
    <strong>ユーザーID:</strong>
    <%= @entry.user_id %>
  </p>

  <p>
    <strong>体重:</strong>
    <%= @entry.weight %>
  </p>

  <p>
    <strong>身長:</strong>
    <%= @entry.height %>
  </p>

  <p>
    <strong>運動種類:</strong>
    <%= @entry.ex_type_1 %>
  </p>

  <p>
    <strong>運動時間:</strong>
    <%= @entry.ex_time_1 %>
  </p>

  <p>
    <strong>カロリー:</strong>
    <%= @entry.ex_amount_1 %>
  </p>

  <p>
    <strong>運動種類:</strong>
    <%= @entry.ex_type_2 %>
  </p>

  <p>
    <strong>運動時間:</strong>
    <%= @entry.ex_time_2 %>
  </p>

  <p>
    <strong>カロリー:</strong>
    <%= @entry.ex_amount_2 %>
  </p>

  <p>
    <strong>運動種類:</strong>
    <%= @entry.ex_type_3 %>
  </p>

  <p>
    <strong>運動時間:</strong>
    <%= @entry.ex_time_3 %>
  </p>

  <p>
    <strong>カロリー:</strong>
    <%= @entry.ex_amount_3 %>
  </p>

  <p>
    <strong>食事 朝:</strong>
    <% if (@entry.meal_asa == true) %>
        〇
    <% else %>
        ✖
    <% end %>
  </p>

  <p>
    <strong>食事 昼:</strong>
    <% if (@entry.meal_hiru == true) %>
        〇
    <% else %>
        ✖
    <% end %>
  </p>

  <p>
    <strong>食事 晩:</strong>
    <% if (@entry.meal_asa == true) %>
        〇
    <% else %>
        ✖
    <% end %>
  </p>

  <p>
    <strong>間食:</strong>
    <% if (@entry.snack == true) %>
        〇
    <% else %>
        ✖
    <% end %>
  </p>

  <p>
    <strong>食べたもの:</strong>
    <%= @entry.snack_memo %>
  </p>

  <p>
    <strong>体調:</strong>
    <% case @entry.condition %>
      <% when 0 then %>
        良い
      <% when 1 then %>
        普通
      <% else %>
        悪い
      <% end %>
  </p>

  <p>
    <strong>日付:</strong>
    <%= @entry.day %>
  </p>

  <p>
    <strong>メモ:</strong>
    <%= @entry.memo %>
  </p>

</div>
