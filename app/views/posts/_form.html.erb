<%= form_with(model: post, local: true) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :テキスト %>
    <%= form.text_area :body, id: :post_body %>
  </div>

  <div class="field">
    <%= form.label :youtube_URL %>
    <%= form.text_field :youtube_url, id: :post_youtube_url %>
  </div>

  <div class="field">
    <%= form.label :動画種類 %>
    <%= form.select :movie_type,[["筋トレ","1"],["ダイエット","2"]],include_blank: "選択してください" %>
  </div>

  <div class="actions">
    <%= form.submit '送信', class: 'btn btn-primary btn-block' %>
  </div>
<% end %>
