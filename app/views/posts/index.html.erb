<p id="notice"><%= notice %></p>

<h1>動画</h1>

<table>
  <thead>
    <tr>
      <th>テキスト</th>
      <th>Youtube</th>
      <th>動画種類</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.body %></td>
        <td><iframe width="560" height="315" src="https://www.youtube.com/embed/<%=post.youtube_url%>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe></td>
        <td>
          <% if (post.movie_type == "1") %>
            筋トレ動画
          <% else %>
            ダイエット動画
          <% end %>
        </td>
        <td><%= link_to '詳細', post %></td>
        <td><%= link_to '変更', edit_post_path(post) %></td>
        <td><%= link_to '削除', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規動画', new_post_path %>
